<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <android.widget.Button
            android:id="@+id/team2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/noline"
            android:gravity="center|left"
            android:text="김문최고팀"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <android.widget.Button
            android:id="@+id/aram2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/noline"
            android:backgroundTint="#7B68EE"
            android:drawableRight="@drawable/aram_resize"
            android:gravity="center|right"
            android:textSize="20dp"
            android:textColor="#FFFF00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="19"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/but_look"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:backgroundTint="#D1C4E9"
            android:drawableLeft="@drawable/gomdori_resize"
            android:gravity="center"
            android:text="냉장고 내부 보기"
            android:textSize="25dp" />

        <Button
            android:id="@+id/but_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:backgroundTint="#D1C4E9"
            android:drawableLeft="@drawable/gomdori_resize"
            android:gravity="center"
            android:text="유통기한 확인하기"
            android:textSize="25sp" />

        <Button
            android:id="@+id/but_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:backgroundTint="#D1C4E9"
            android:drawableLeft="@drawable/gomdori_resize"
            android:gravity="center"
            android:text="식품주문"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="0dp">

        <android.widget.Button
            android:id="@+id/fuc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/noline"
            android:gravity="center"
            android:text="기능"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <android.widget.Button
            android:id="@+id/home1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/noline"
            android:text="홈"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <android.widget.Button
            android:id="@+id/set1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/noline"
            android:text="설정"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>



</LinearLayout>