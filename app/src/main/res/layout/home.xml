<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFF00"
    android:weightSum="20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <android.widget.Button
            android:id="@+id/team2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/noline"
            android:gravity="center|left"
            android:text="김문최고팀"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <android.widget.Button
            android:id="@+id/aram2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/noline"
            android:drawableRight="@drawable/aram_resize"
            android:backgroundTint="#7B68EE"
            android:gravity="center|right"
            android:textSize="20dp"
            android:textColor="#FFFF00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/con_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="연결된 기기"
            android:drawableLeft="@drawable/bgomdori_resize"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_margin="10dp"/>

        <android.widget.Button
            android:id="@+id/refrigerator"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="#DCDCDC"
            android:backgroundTint="#DCDCDC"
            android:drawableLeft="@drawable/resize"
            android:paddingLeft="10dp"
            android:text="냉장고"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="16"
        android:orientation="vertical"
        android:background="#FFFFFF">



        <TextView
            android:id="@+id/life_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text1"
            android:text="스마트 라이프를 위한 추천"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/book_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text1"
            android:text="냉장고 안 식품을 위한 레시피"
            android:drawableLeft="@drawable/book_resize"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_margin="10dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="0dp">

        <android.widget.Button
            android:id="@+id/fuc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/noline"
            android:gravity="center"
            android:text="기능"
            android:textSize="20dp"
            android:textColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/home2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/noline"
            android:text="홈"
            android:textSize="20dp"
            android:textColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/set2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/noline"
            android:text="설정"
            android:textSize="20dp"
            android:textColor="#FFFFFF" />

    </LinearLayout>



</LinearLayout>
